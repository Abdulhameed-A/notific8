// mixins
notific8_legacy_theme($name, $border-color, $background-color, $close-background-color = $border-color, $text-color = #fff, $close-text-color = $text-color)
  .{$notific8-ns}-notification.family-legacy.{$name}
    background-color: $background-color
    border-color: $border-color
    color: $text-color
    .{$notific8-ns}-close
      background-color: $close-background-color
      color: $close-text-color
.{$notific8-ns}-notification
  &.family-legacy
    border-style: solid
    border-width: 2px
    color: #fff
    height: em(90px)
    transition: all 0.2s ease-in-out
    width: em(390px)
    .{$notific8-ns}-heading
      font-weight: bold
      margin-bottom: em(5px)
    .{$notific8-ns}-message
      font-size: em(14px)
    .{$notific8-ns}-close
      font-size: 1.25em
      line-height: 1em
      padding: 0 0.25em
      top: 0
      &.sticky
        font-size: em(10px)
        line-height: em(14px, 10px)
        padding: em(2px, 10px) 0
        text-transform: uppercase
        width: em(89px, 10px)
.left
  .{$notific8-ns}-notification.family-legacy
    margin-left: em(-390px)
    padding-left: em(33px)
    &.open
      margin-left: 0
    .{$notific8-ns}-close
      left: -1*2px
      &.sticky
        left: em(-37px, 10px)
        top: em(34px, 10px)
        transform: rotate(270deg)
.right
  .{$notific8-ns}-notification.family-legacy
    margin-right: em(-390px)
    padding-right: em(33px)
    &.open
      margin-right: 0
    .{$notific8-ns}-close
      right: -1*2px
      &.sticky
        right: em(-37px, 10px)
        top: em(34px, 10px)
        transform: rotate(90deg)
